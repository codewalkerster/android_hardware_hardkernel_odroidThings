cc_library_static {
    name: "libRingBuffer",
    srcs: ["ring_buffer/ringbuffer.c"],
    vendor: true,
}

cc_library_shared {
    relative_install_path: "hw",
    srcs: [
        "Board.cpp",
        "OdroidC4.cpp",
        "OdroidM1.cpp",
        "OdroidN2.cpp",
        "odroidThings.cpp",
        "PinManager.cpp",
        "Uart.cpp",
        "Spi.cpp",
    ],

    include_dirs: [
        "hardware/libhardware/include",
        "system/core/libcutils/include",
        "system/core/libutils/include",
        "system/core/libsystem/include",
        "vendor/hardkernel/external/wiringPi",
        "hardware/hardkernel/odroidThings/ring_buffer",
    ],

    static_libs: ["libRingBuffer"],

    shared_libs: [
        "liblog",
        "libcutils",
        "libwiringPi",
    ],

    header_libs: ["wiringPi-headers"],

    name: "odroidThings",
    vendor: true,
    cflags: [
        "-DLOG_TAG=\"odroidThings\"",
        "-Wno-unused-parameter",
    ],
}
